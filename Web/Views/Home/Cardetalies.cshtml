<script>
    // Funcție pentru schimbarea imaginii principale
    function changeImage(src) {
        document.getElementById('main-car-image').src = src;
    }

    document.addEventListener('DOMContentLoaded', function () {
        const pickupDateInput = document.getElementById('pickupDate');
        const returnDateInput = document.getElementById('returnDate');
        const daysCountSpan = document.getElementById('days-count');
        const totalPriceSpan = document.getElementById('total-price');
        const totalAmountInput = document.getElementById('totalAmount');
        const dailyPriceSpan = document.getElementById('daily-price');

        // Get the daily price from the span
        const dailyPrice = parseFloat(dailyPriceSpan.textContent.replace('$', ''));

        function updateTotal() {
            const pickupDate = new Date(pickupDateInput.value);
            const returnDate = new Date(returnDateInput.value);

            if (pickupDate && returnDate && !isNaN(pickupDate) && !isNaN(returnDate)) {
                const diffTime = Math.abs(returnDate - pickupDate);
                const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

                if (diffDays > 0) {
                    const total = diffDays * dailyPrice;
                    daysCountSpan.textContent = diffDays;
                    totalPriceSpan.textContent = '$' + total.toFixed(2);
                    totalAmountInput.value = total;
                } else {
                    daysCountSpan.textContent = '0';
                    totalPriceSpan.textContent = '$0';
                    totalAmountInput.value = '0';
                }
            }
        }

        pickupDateInput.addEventListener('change', updateTotal);
        returnDateInput.addEventListener('change', updateTotal);
    });

    document.addEventListener('DOMContentLoaded', function() {
        // Obține ID-ul mașinii din ViewBag
        const carId = @ViewBag.CarId;

        // Obține lista existentă de mașini vizualizate
        let viewedCars = CookieManager.getLastViewedCars();

        // Adaugă mașina curentă la începutul listei
        viewedCars = viewedCars.filter(id => id !== carId); // Elimină dacă există deja
        viewedCars.unshift(carId); // Adaugă la început

        // Păstrează doar ultimele 5 mașini vizualizate
        viewedCars = viewedCars.slice(0, 5);

        // Salvează lista actualizată
        CookieManager.saveLastViewedCars(viewedCars);
    });
</script>

