@{
    ViewBag.Title = "Registre";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <title>Registre</title>
</head>
<body>
    <nav>
        <div class="nt-container">
            <div class="container">
                <div class="nav-top">
                    <div>
                        <i class="fa-solid fa-location-dot"></i>
                        <span>Chișinău, Moldova</span>
                    </div>
                    <div>
                        <i class="fa-solid fa-clock"></i>
                        <span>24/7 Open</span>
                    </div>
                    <div>
                        <i class="fa-solid fa-phone"></i>
                        <span>069112233</span>
                    </div>
                    <div class="social-icons">
                        <i class="fa-brands fa-facebook"></i>
                        <i class="fa-brands fa-instagram"></i>
                        <i class="fa-brands fa-twitter"></i>
                        <i class="fa-brands fa-linkedin-in"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="nl-container">
            <div class="container">
                <div class="logo">
                    <img src="~/Content/images/car-top.png" alt="">
                </div>
                <ul class="navlist">
                    <li><a href="@Url.Action("Index","Home")">home</a></li>
                    <li><a href="@Url.Action("Login","Home")">login/sign up</a></li>
                    <li><a href="@Url.Action("About","Home")">about</a></li>
                    <li><a href="@Url.Action("Services","Home")">services</a></li>
                    <li><a href="@Url.Action("Carsection","Home")">car</a></li>
                    <li><a href="@Url.Action("Blogs","Home")">blog</a></li>
                    <li><a href="@Url.Action("Contacts","Home")">contact</a></li>
                    <li><a href="@Url.Action("MyProfile","Home")">myprofile</a></li>
                    <li><a href="@Url.Action("Review","Home")">reviews</a></li>
                </ul>
                <div class="menu-btn">
                    <i class="fa-solid fa-bars"></i>
                </div>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="registration-container" id="registrationContainer">
            <h2>Înregistrare DriveNow</h2>
            <form onsubmit="event.preventDefault(); showSuccessMessage();">
                <div class="input-group">
                    <label for="nume">Nume și Prenume:</label>
                    <input type="text" id="nume" name="nume" required>
                </div>
                <div class="input-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" required>
                </div>
                <div class="input-group">
                    <label for="telefon">Număr de Telefon:</label>
                    <input type="tel" id="telefon" name="telefon" required>
                </div>
                <div class="input-group">
                    <label for="permis">Număr Permis de Conducere:</label>
                    <input type="text" id="permis" name="permis" required>
                </div>
                <div class="input-group">
                    <label for="password">Parolă:</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <div class="input-group">
                    <label for="confirm-password">Confirmă Parola:</label>
                    <input type="password" id="confirm-password" name="confirm-password" required>
                </div>

                <p class="terms-text">
                    Prin înregistrare, confirm că am citit și sunt de acord cu
                    <a href="#">Termenii și Condițiile</a> și
                    <a href="#">Politica de Confidențialitate</a>
                </p>

                <button type="submit" class="button">Creează Cont</button>
            </form>
            <p>Ai deja cont? <a href="login" class="login-link">Autentifică-te</a></p>
        </div>

        <div class="success-container" id="successContainer">
            <div class="success-message-box">
                <span class="success-message">Înregistrare reușită!</span>
                <span class="success-text">
                    Contul tău a fost creat cu succes. Poți începe să închiriezi mașini!
                </span>
                <button class="button" onclick="window.location.href='index'">
                    Mergi la pagina principală
                </button>
            </div>
        </div>
    </div>
</body>
</html>





















