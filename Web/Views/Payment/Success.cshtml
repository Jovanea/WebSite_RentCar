@{
    ViewBag.Title = "Plată finalizată cu succes";
}

@Html.Partial("_Header")

<div class="payment-success">
    <div class="success-contain">
        <div class="success-icon">
            <i class="fa-solid fa-circle-check"></i>
        </div>
        <h2>Plată finalizată cu succes!</h2>
        <div class="payment-details">
            <p>Vă mulțumim pentru plată. Rezervarea dumneavoastră a fost confirmată.</p>

            @if (ViewBag.TransactionId != null)
            {
                <div class="transaction-details">
                    <div class="detail-row">
                        <span class="label">ID Tranzacție:</span>
                        <span class="value">@ViewBag.TransactionId</span>
                    </div>

                    @if (ViewBag.PaymentAmount != null)
                    {
                        <div class="detail-row">
                            <span class="label">Suma plătită:</span>
                            <span class="value">$@ViewBag.PaymentAmount</span>
                        </div>
                    }

                    @if (ViewBag.PaymentDate != null)
                    {
                        <div class="detail-row">
                            <span class="label">Data plății:</span>
                            <span class="value">@(((DateTime)ViewBag.PaymentDate).ToString("dd/MM/yyyy HH:mm"))</span>
                        </div>
                    }
                </div>
            }

            <p>Veți primi în curând un email cu detaliile rezervării.</p>
        </div>
        <div class="actions">
            <a href="@Url.Action("Index", "Home")" class="button-success button-primary">Înapoi la pagina principală</a>
            <a href="@Url.Action("Profile", "Home")" class="button-success button-secondary">Vizualizare profil</a>
        </div>
    </div>
</div>

