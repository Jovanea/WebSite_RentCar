@model eUseControl.BusinessLogic.DBModel.Car

@{
    ViewBag.Title = "Delete Car";
}

<div class="admin-container">
    <h2>Delete Car</h2>
    <h3>Are you sure you want to delete this car?</h3>

    <div class="car-details">
        <div class="car-image">
            <img src="@Model.MainImageUrl" alt="@Model.Brand @Model.Model" class="img-fluid" />
        </div>

        <div class="car-info">
            <h4>@Model.Brand @Model.Model</h4>
            <dl class="dl-horizontal">
                <dt>Year</dt>
                <dd>@Model.Year</dd>

                <dt>Price per Day</dt>
                <dd>$@Model.PricePerDay</dd>

                <dt>Category</dt>
                <dd>@Model.Category</dd>

                <dt>Transmission</dt>
                <dd>@Model.Transmission</dd>

                <dt>Fuel Type</dt>
                <dd>@Model.FuelType</dd>

                <dt>Horsepower</dt>
                <dd>@Model.Horsepower</dd>

                <dt>Seats</dt>
                <dd>@Model.Seats</dd>

                <dt>Status</dt>
                <dd>
                    @if (Model.IsAvailable)
                    {
                        <span class="badge badge-success">Available</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Not Available</span>
                    }
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions">
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Back to List", "Cars", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>