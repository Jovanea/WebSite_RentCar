@model eUseControl.BusinessLogic.DBModel.Car

@{
    ViewBag.Title = "Car Details";
}

<div class="admin-container">
    <h2>Car Details</h2>

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                    {
                        <img src="@Model.MainImageUrl" alt="@Model.Brand @Model.Model" class="img-fluid" />
                    }
                </div>
                <div class="col-md-6">
                    <h3>@Model.Brand @Model.Model</h3>
                    <div class="details-grid">
                        <div class="detail-item">
                            <label>Year:</label>
                            <span>@Model.Year</span>
                        </div>
                        <div class="detail-item">
                            <label>Price per Day:</label>
                            <span>@Model.PricePerDay.ToString("C")</span>
                        </div>
                        <div class="detail-item">
                            <label>Category:</label>
                            <span>@Model.Category</span>
                        </div>
                        <div class="detail-item">
                            <label>Transmission:</label>
                            <span>@Model.Transmission</span>
                        </div>
                        <div class="detail-item">
                            <label>Fuel Type:</label>
                            <span>@Model.FuelType</span>
                        </div>
                        <div class="detail-item">
                            <label>Horsepower:</label>
                            <span>@Model.Horsepower</span>
                        </div>
                        <div class="detail-item">
                            <label>Seats:</label>
                            <span>@Model.Seats</span>
                        </div>
                        <div class="detail-item">
                            <label>Stock:</label>
                            <span>@Model.Stock</span>
                        </div>
                        <div class="detail-item">
                            <label>Status:</label>
                            <span class="badge @(Model.IsAvailable ? "badge-success" : "badge-danger")">
                                @(Model.IsAvailable ? "Available" : "Not Available")
                            </span>
                        </div>
                    </div>

                    <div class="mt-4">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.CarId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Back to List", "Cars", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
