@model IEnumerable<eUseControl.BusinessLogic.DBModel.Car>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manage Cars";
}

@Html.Partial("_Header")

<div class="admin-container">
    <h2>Manage Cars</h2>

    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <p>
        @Html.ActionLink("Add New Car", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Brand</th>
                    <th>Model</th>
                    <th>Year</th>
                    <th>Price/Day</th>
                    <th>Category</th>
                    <th>Stock</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var car in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(car.MainImageUrl))
                            {
                                <img src="@car.MainImageUrl" alt="@car.Brand @car.Model" style="max-width: 100px;" />
                            }
                        </td>
                        <td>@car.Brand</td>
                        <td>@car.Model</td>
                        <td>@car.Year</td>
                        <td>@car.PricePerDay.ToString("C")</td>
                        <td>@car.Category</td>
                        <td>
                            <div class="stock-control">
                                <span class="stock-value">@car.Stock</span>
                                @using (Html.BeginForm("UpdateStock", "Admin", new { id = car.CarId }, FormMethod.Post, new { style = "display: inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="number" name="stockChange" value="1" min="-@car.Stock" max="10" class="form-control form-control-sm" style="width: 60px; display: inline-block;" />
                                    <button type="submit" class="btn btn-sm btn-info">Update</button>
                                }
                            </div>
                        </td>
                        <td>
                            <span class="badge @(car.IsAvailable ? "badge-success" : "badge-danger")">
                                @(car.IsAvailable ? "Available" : "Not Available")
                            </span>
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = car.CarId }, new { @class = "btn btn-sm btn-info" })
                                @Html.ActionLink("Details", "Details", new { id = car.CarId }, new { @class = "btn btn-sm btn-secondary" })
                                @Html.ActionLink("Delete", "Delete", new { id = car.CarId }, new { @class = "btn btn-sm btn-danger", onclick = "return confirm('Are you sure you want to delete this car?');" })
                                @using (Html.BeginForm("ToggleAvailability", "Admin", new { id = car.CarId }, FormMethod.Post, new { style = "display: inline;" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm @(car.IsAvailable ? "btn-warning" : "btn-success")">
                                        @(car.IsAvailable ? "Set Unavailable" : "Set Available")
                                    </button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .admin-container {
        padding: 20px;
    }

    .table {
        margin-top: 20px;
    }

    .btn-group {
        display: flex;
        gap: 5px;
    }

    .badge {
        padding: 5px 10px;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-danger {
        background-color: #dc3545;
    }

    .stock-control {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .stock-value {
        font-weight: bold;
        min-width: 30px;
        text-align: center;
    }

    .alert {
        margin-bottom: 20px;
    }
</style>
